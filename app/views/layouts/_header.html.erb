<header class="navbar navbar-static-top">
  <div class="container">
    <%= link_to t(".booking_tours"), root_path, id: "logo" %>
    <nav>
      <div class="nav navbar-nav navbar-right">
        <div class="dropdown header-tags">
          <button class="btn dropdown-toggle btn-m" type="button"
            id="languageDropDown" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <%= t ".language.language" %> <b class="caret"></b>
          </button>
          <div class="dropdown-menu" aria-labelledby="languageDropDown">
            <%= link_to t(".language.en"),
              request.query_parameters.merge(locale: :en), class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to t(".language.vi"),
              request.query_parameters.merge(locale: :vi), class: "dropdown-item" %>
          </div>
        </div>
        <% if signed_in? %>
          <div class="dropdown header-tags">
            <button class="btn dropdown-toggle btn-m" type="button"
              id="languageDropDown" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false">
              <%= t ".profile" %> <b class="caret"></b>
            </button>
            <div class="dropdown-menu" aria-labelledby="languageDropDown">
              <%= link_to t(".bookings"), "#", class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to t(".settings"), edit_user_path(current_user), class: "dropdown-item" %>
            </div>
          </div>
          <div class="header-tags">
              <%= link_to t(".sign_out"), sign_out_path, method: :delete, class: "btn btn-info btn-m header-btn" %>
          </div>
        <% else %>
          <div class="header-tags">
              <%= link_to t(".sign_in"), sign_in_path, class: "btn btn-info btn-m header-btn" %>
          </div>
          <div class="header-tags">
            <%= link_to t(".register"), register_path, class: "btn btn-info btn-m header-btn" %>
          </div>
        <% end %>
      </div>
    </nav>
  </div>
</header>
